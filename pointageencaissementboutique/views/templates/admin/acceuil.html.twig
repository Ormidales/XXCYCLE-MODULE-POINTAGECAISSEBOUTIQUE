{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}

<script src="https://cdn.tailwindcss.com"></script>

<div class="w-full h-[20vh] flex items-center justify-center">

    <div class="w-full px-3 py-2 bg-gray-600 flex items-center justify-between items-center mb-4 rounded-lg">
        <p class="text-white text-[18px] font-bold">Liste des encaissements</p>
        <form class="ml-3 flex inline" method="POST" action="">
            <input id="form_date" type="date" class="h-[4vh] w-[18vh] border border-black text-black px-2">
            <select id="form_mode" class="ml-2 h-[4vh] px-2">
                <option>CB + PNF</option>
                <option>CHEQUE</option>
                <option>ESPECE</option>
                <option>CREDIT CLIENT</option>
                <option>VIREMENT</option>
                <option>PAYPAL</option>
                <option>1EURO</option>
                <option>LCR</option>
            </select>
            <select id="form_type" class="ml-2 h-[4vh] px-2">
                <option>Boutique</option>
                <option>Internet (alicemontredon.xxcycle.com)</option>
                <option>Internet (alicemontredon.xxcycle.fr)</option>
            </select>
            <input id="form_submit" type="submit" value="Charger" class="ml-2 bg-blue-500 px-4 py-1 rounded-lg text-white">
        </form>
        <p>{{message_erreur}}</p>
    </div>

</div>

{% endblock %}